      MYSQL_DATABASE: 'portfolio'
      MYSQL_USER: '7x4zxwKihKYD3Ew3MXbexC'
      MYSQL_PASSWORD: 'o4UtJEFA5rUExa7DNxuriu'
    mem_limit: 512MB

  redis:
    image: redis:3
    ports:
      - "6379"


